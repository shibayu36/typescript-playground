{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": false,
    "removeComments": false,
    "rootDir": "src/ts",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@project-references/hoge/*": [
        "../../node_modules/@project-references/hoge/dist/*"
      ]
    }
  },
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../hoge" }]
}
