{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": false,
    "removeComments": false,
    "rootDir": "src/ts",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false
}
